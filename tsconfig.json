{
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__"],
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "declaration": true
  }
}
